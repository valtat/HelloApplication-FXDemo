<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.helloapplication.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="name"/>
    <Button fx:id="EN" text="English" onAction="#switchToEN"/>
    <Button fx:id="FA" text="Persian" onAction="#switchToFA"/>
    <Button fx:id="JP" text="Japanese" onAction="#switchToJP"/>
</VBox>